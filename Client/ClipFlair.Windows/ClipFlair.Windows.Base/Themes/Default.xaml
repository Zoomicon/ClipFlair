      <Setter.Value>
        <DataTemplate>
          <TextBlock TextWrapping="Wrap" Width="200" Text="{Binding}" />
        </DataTemplate>
      </Setter.Value>
    </Setter>
  </Style>
  -->
  
</ResourceDictionary>
