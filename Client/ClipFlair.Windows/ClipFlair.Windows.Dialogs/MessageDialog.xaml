<controls:ChildWindow 
  x:Class="ClipFlair.Windows.Dialogs.MessageDialog"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
  xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  d:DesignHeight="131" d:DesignWidth="254"
  Title="Input" 
  >

  <Grid x:Name="LayoutRoot" Margin="5">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition MinHeight="10"/>
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <TextBlock x:Name="lblMessage" Text="Test" Grid.Row="0" Margin="0,0,0,5"/>

    <Button x:Name="OKButton" Content="OK" Click="OKButton_Click" Margin="3,0,3,0" Padding="10,5,10,5" Grid.Row="3" HorizontalAlignment="Center" />
    
  </Grid>
</controls:ChildWindow>