<UserControl x:Class="ClipFlair.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400"
    Name="Page" 
    xmlns:zui="clr-namespace:ZoomAndPan;assembly=ZoomAndPan" 
    xmlns:float="clr-namespace:SilverFlow.Controls;assembly=SilverFlow.Controls" 
    xmlns:clipflair="clr-namespace:ClipFlair"             
   >

  <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <zui:ZoomAndPanControl Name="zoomAndPanControl1" >
            <float:FloatingWindowHost Name="floatingWindowHost1" Width="350" Height="250">
                <clipflair:MediaPlayerWindow />
            </float:FloatingWindowHost>
        </zui:ZoomAndPanControl>
    </ScrollViewer>
</UserControl>
